<div class="row">
 <div class="col-auto">
   <strong>Welcome, {{ user.username }}!</strong>
 </div>
</div>


<div class="row mt-4">
 <div class="col-md-6">
   <strong>Create a New Project:</strong>


    <form class="form new-project-form">
     <div class="form-group">
       <label for="project-name">project title:</label>
       <input class="form-input" type="text" id="project-name" name="project-name" />
     </div>


<div class="field">
 <label class="label">Subject</label>
 <div class="control">
   <div class="select">
     <select>
       <option>Select dropdown</option>
       <option>Cow</option>
       <option>Giraffe</option>
     </select>
   </div>
 </div>
</div>
<strong>Add an image of the giraffe/cow</strong>
<span class="file is-boxed">
 <label class="file-label">
   <input class="file-input" type="file" name="resume">
   <span class="file-cta">
     <span class="file-icon">
       <i class="fas fa-upload"></i>
     </span>
     <span class="file-label">
       Choose a fileâ€¦
     </span>
   </span>
 </label>
</span>


<span class="field">
 <label class="label">Message</label>
 <div class="control">
   <div class="field">
     <div class="form-group">
       <label for="project-desc">description:</label>
       <textarea class="textarea" id="project-desc" name="project-desc" placeholder="enter cow or giraffe description here"></textarea>
       <!-- <textarea class="form-input" id="project-desc" name="project-desc"></textarea> -->
     </div>
       <!-- <input class="input is-success" type="text" placeholder="Text input" value="bulma"> -->
       <span class="icon is-small is-left">
         <i class="fas fa-user"></i>
       </span>
       <span class="icon is-small is-right">
         <i class="fas fa-check"></i>
       </span>
     </div>
   </div>
 </div>
</span>


<div class="field is-grouped">
 <div class="control">
   <button class="button is-link">Submit</button>
 </div>
 <div class="control">
   <button class="button is-link is-light">Cancel</button>
 </div>
</div>